<%= simple_form_for([:admin, @product], :html => {:class => 'form-horizontal' }) do |f| %>
  <%= f.input :album %>
  <%= f.input :artist %>
  <%= f.association :category %>
  <%= f.input :description %>
  <%= f.input :price %>
  <%= f.input :qty %>
  <%= f.input :sale_price %>
  <%= f.input :on_sale %>
  <%= f.submit %>
<% end %>
