<h1>List of Products</h1>

<div class="center">
  <%= will_paginate @admin_products %>
</div>

<table class="table table-striped table-bordered">
  <tr>
    <th>Album</th>
    <th>Artist</th>
    <th>Description</th>
    <th>Quantity</th>
    <th>Price</th>
    <th>On Sale</th>
    <th>Sale Price</th>
    <th>Category</th>
    <th colspan="3" style="text-align:center;">Actions</th>
  </tr>

<% @admin_products.each do |admin_product| %>
  <tr>
    <td><%= admin_product.album %></td>
    <td><%= admin_product.artist %></td>
    <td><%= admin_product.description %></td>
    <td><%= admin_product.qty %></td>
    <td><%= admin_product.price %></td>
    <% if admin_product.on_sale %>  
      <td>Yes</td>
    <% else %>
      <td>No</td>
    <% end %>
    <td><%= admin_product.sale_price %></td>
    <td><%= admin_product.category_id %></td>
    <td><%= link_to 'Show', [:admin, admin_product], class: "btn btn-primary" %></td>
    <td><%= link_to 'Edit', edit_admin_product_path(admin_product), class: "btn btn-primary" %></td>
    <td><%= link_to 'Destroy', [:admin, admin_product], confirm: 'Are you sure?', method: :delete, class: "btn btn-danger" %></td>
  </tr>
<% end %>
</table>

<div class="center">
  <%= will_paginate @admin_products %>
  <br />
  <%= link_to 'New Product', new_admin_product_path, class: "btn btn-primary" %>
</div>

<br />
